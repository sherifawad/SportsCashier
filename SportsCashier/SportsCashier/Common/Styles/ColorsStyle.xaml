<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    x:Class="SportsCashier.Common.Styles.ColorsStyle"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!--  Colors  -->
    <Color x:Key="WhiteColor">#FFFFFF</Color>
    <Color x:Key="OffWhiteColor">#F0F0F0</Color>
    <Color x:Key="DarkBlackColor">#000000</Color>
    <Color x:Key="BlackColor">#252628</Color>
    <Color x:Key="LightBlackColor">#484C4A</Color>
    <Color x:Key="SecondaryTextColor">#8E8F93</Color>
    <Color x:Key="PinkColor">#FE2981</Color>
    <Color x:Key="VeryLightPinkColor">#FBA596</Color>
    <Color x:Key="LightPinkColor">#F6727F</Color>
    <Color x:Key="OrangeColor">#FFC000</Color>
    <Color x:Key="LightOrangeColor">#FEF102</Color>
    <Color x:Key="YellowColor">#F1EC16</Color>
    <Color x:Key="DarkBlueColor">#31328E</Color>
    <Color x:Key="WhiteBlueColor">#F0F3FD</Color>

    <!--  Solid Brush Colores  -->
    <SolidColorBrush x:Key="OrangeBrushColor" Color="{StaticResource OrangeColor}" />
    <SolidColorBrush x:Key="WhiteBrushColor" Color="{StaticResource WhiteColor}" />
</ResourceDictionary>