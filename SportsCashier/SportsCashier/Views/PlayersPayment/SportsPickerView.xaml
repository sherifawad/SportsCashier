<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:SportsCashier.ViewModels.PlayersPayment"
             x:Class="SportsCashier.Views.PlayersPayment.SportsPicker"
             Visual="Material">

    <ContentView.BindingContext>
        <viewModels:SportPickerViewModel/>
    </ContentView.BindingContext>

    <ContentView.Content>

        <Grid ColumnDefinitions="*,*" VerticalOptions="Center" >

            <Picker x:Name="typesport" Title="نوع اللعبة" HorizontalOptions="FillAndExpand"
                    ItemsSource="{Binding SportCaegoriesList}"
                    ItemDisplayBinding="{Binding SportType}"
                    SelectedItem="{Binding SelectedCaegory}"/>

            <Picker x:Name="namesport" Grid.Column="1"   Title="اسم اللعبة" HorizontalOptions="FillAndExpand"
                    ItemsSource="{Binding SportsList}"
                    ItemDisplayBinding="{Binding SportName}"
                    SelectedItem="{Binding SelectedSport}" />



        </Grid>
    </ContentView.Content>


</ContentView>