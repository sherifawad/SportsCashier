<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="SportsCashier.Views.Template.PlayerDetailsSportsContentView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentView.Content>
        <StackLayout Margin="10,5,10,5">
            <Label HorizontalOptions="Center" Text="{Binding Name}" TextColor="{StaticResource DarkBlueColor}" />
            <Frame
                Padding="0"
                BackgroundColor="{StaticResource OffWhiteColor}"
                CornerRadius="10"
                HasShadow="True">
                <Label
                    HorizontalOptions="Center"
                    Text="{Binding Price}"
                    TextColor="{StaticResource OrangeColor}" />

            </Frame>
        </StackLayout>
    </ContentView.Content>
</ContentView>